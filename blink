#define ledping 3
#define ledpinb 9
// the setup function runs once when you press reset or power the board
void setup() {
  // initialize digital pin LED_BUILTIN as an output.
  pinMode(ledping, OUTPUT);
   pinMode(ledpinb, OUTPUT);
}

// the loop function runs over and over again forever
void loop() {
  digitalWrite(ledping, HIGH);   // turn the LED on (HIGH is the voltage level)                      // wait for a second
  digitalWrite(ledpinb, LOW);    // turn the LED off by making the voltage LOW
  delay(100);                       // wait for a second
  digitalWrite(ledpinb, HIGH);   // turn the LED on (HIGH is the voltage level)               // wait for a second
  digitalWrite(ledping, LOW);    // turn the LED off by making the voltage LOW
  delay(100);                   
}
